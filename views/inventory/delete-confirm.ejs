<main>
  <h1>Delete <%= inv_make %> <%= inv_model %></h1>
  <p>⚠️ Confirm Deletion - The delete is permanent.</p>

  <form action="/inv/delete" method="post">
    <label for="inv_make">Make</label>
    <input type="text" readonly id="inv_make" name="inv_make" value="<%= inv_make %>">

    <label for="inv_model">Model</label>
    <input type="text" readonly id="inv_model" name="inv_model" value="<%= inv_model %>">

    <label for="inv_year">Year</label>
    <input type="text" readonly id="inv_year" name="inv_year" value="<%= inv_year %>">

    <label for="inv_price">Price</label>
    <input type="text" readonly id="inv_price" name="inv_price" value="<%= inv_price %>">

    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    <input type="submit" value="Delete">
  </form>
</main>