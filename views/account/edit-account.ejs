<main>
  <h1>Update Account</h1>

  <form action="/account/update/<%= account.account_id %>" method="POST">
    <label for="account_firstname">First Name:</label>
    <input type="text" name="account_firstname" id="account_firstname" value="<%= account.account_firstname %>" required>

    <label for="account_lastname">Last Name:</label>
    <input type="text" name="account_lastname" id="account_lastname" value="<%= account.account_lastname %>" required>

    <label for="account_email">Email:</label>
    <input type="email" name="account_email" id="account_email" value="<%= account.account_email %>" required>

    <label for="account_password">New Password (optional):</label>
    <input type="password" name="account_password" id="account_password">

    <button type="submit">Update Account</button>
  </form>
</main>
